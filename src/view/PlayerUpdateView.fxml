<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>	
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?> 
<?import javafx.geometry.*?>

<VBox alignment="CENTER" styleClass="background" prefHeight="400.0" prefWidth="600.0" spacing="20" 
      xmlns:fx="http://javafx.com/fxml/1"  fx:controller="controller.PlayerUpdateController">
    <padding>
        <Insets top="10" bottom="10" left="5" right="5" />
    </padding>
    <VBox alignment = "CENTER" spacing = "10">
        <Label text = "Player Details" styleClass = "label-h2" alignment = "CENTER_LEFT"/>
        <HBox spacing = "10" alignment = "CENTER">
            <Label text = "Player Name:" styleClass = "h1"/>
            <TextField fx:id = "newNameTF" prefWidth = "100"/>
        </HBox>
        <HBox spacing = "10" alignment = "CENTER">
            <Label text = "Player Credit:" styleClass = "h1"/>
            <TextField fx:id = "newCreditTF" prefWidth = "100"/>
        </HBox>
        <HBox spacing = "10" alignment = "CENTER">
            <Label text = "Player Age:" styleClass = "h1"/>
            <TextField fx:id = "newAgeTF" prefWidth = "100"/>
        </HBox>
        <HBox spacing = "10" alignment = "CENTER">
            <Label text = "Player No:" styleClass = "h1"/>
            <TextField fx:id = "newNoTF" prefWidth = "100"/>
        </HBox>
        <HBox alignment = "CENTER" spacing = "10">
            <Button text = "Update" fx:id = "updBtn" onAction = "#handleUPD" styleClass = "button"/>
            <Button text = "Add" fx:id = "addBtn" onAction = "#handleADD" styleClass = "button"/>
            <Button text = "Close" fx:id = "clBtn" onAction = "#handleCL" styleClass = "button"/>
        </HBox>
    </VBox>
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
