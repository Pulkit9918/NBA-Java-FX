<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>	
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?> 
<?import javafx.geometry.*?>

<VBox  alignment="CENTER" styleClass="background" prefHeight="400.0" prefWidth="600.0" spacing="20" 
       xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="controller.AddTeamController">
    <padding>
        <Insets top="10" bottom="10" left="5" right="5" />
    </padding>
    <VBox spacing = "20" alignment = "CENTER">
        <Label text = "Team Details" styleClass = "label-header"/>
        <HBox spacing = "150" alignment = "CENTER">
            <Label text = "Name:" styleClass = "h1"/>
            <TextField fx:id = "newTeamNameTF" prefWidth = "200"/>
        </HBox>
    </VBox>
    <Button text = "Add" fx:id = "addBtn" onAction = "#handleADD" styleClass = "button" alignment = "CENTER"/>
   
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
