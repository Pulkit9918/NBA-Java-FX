<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox  alignment="CENTER" styleClass="background" prefHeight="450.0" prefWidth="350.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="controller.SeasonController"
    >
    <HBox > 
        <ImageView fitHeight = "150.0" fitWidth = "350.0">
            <image>
                <Image url = "@NBA_Back.jpg"/>
            </image>
        </ImageView>
    </HBox>
    <VBox alignment = "CENTER" spacing = "10">
            <Button text = "${'Round'}" fx:id = "roundButton" onAction = "#handleRound" styleClass = "smallButton" alignment = "CENTER"/>
            <Button text = "${'Current'}" fx:id = "currentButton" onAction = "#handleCurrent" styleClass = "smallButton" alignment = "CENTER"/>
            <Button text = "${'Game'}" fx:id = "gameButton" onAction = "#handleGame" styleClass = "smallButton" alignment = "CENTER"/>
            <Button text = "${'Result'}" fx:id = "resultButton" onAction = "#handleResult" styleClass = "smallButton" alignment = "CENTER"/>
            <Button text = "${'Close'}" fx:id = "closeButton" onAction = "#handleClose" styleClass = "smallButton" alignment = "CENTER"/>
    </VBox>
        
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
</VBox>
