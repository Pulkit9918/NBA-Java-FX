<VBox styleClass="background"  alignment="CENTER" prefHeight="300" prefWidth="400" spacing="20" xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="controller.CurrentRoundTeamsController">
    <VBox alignment = "CENTER" spacing = "10">
        <HBox alignment = "CENTER">
            <Label fx:id = "titleLabel" text = "Round:" styleClass = "label-header"/>
        </HBox>
        <TableView fx:id = "currentRoundTable" prefWidth = "50.0" prefHeight = "300.0">
            <columns>
                <TableColumn fx:id = "teamONE" text = "Team One" prefWidth = "150.0"></TableColumn>
                <TableColumn></TableColumn>
                <TableColumn fx:id = "teamTWO" text = "Team Two" prefWidth = "170.0"></TableColumn>
            </columns>
        </TableView>
        <Button text = "Close" fx:id = "clBtn" onAction = "#handleCL" styleClass = "button"/>
    </VBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
